{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-o",
                "${workspaceFolder}/Mis_Damas",
                "${workspaceFolder}/juego.cpp",
                "${workspaceFolder}/damas.cpp",
                "${workspaceFolder}/coordenadas.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compilando el proyecto"
        },
        {
            "label": "run",
            "type": "shell",
            "command": "${workspaceFolder}/Mis_Damas",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}
